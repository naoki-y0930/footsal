
     <% @serious.each do |s| %>
      <div class="posts-frame1">
       <div class="double-frame">
        <div class="change-post-condition body-serious"><%= s.conditions %></div>
         <div class="font3 time-right"><%= s.created_at.strftime("%Y-%m-%d %H:%M") %></div>
          <div class="font1 posts-frame2 center margin2 postsblock"><p><%= link_to s.title, post_path(s) %></p></div>
           <div class="postsblock"><p><%= s.body %></p></div>
            <div class="margin-right1"><%= s.user.team_name %></div>
             <% @teamdetails.each do |team| %>
              <% if s.user_id == team.user_id %>
               <div class="margin-right1"><span class="font3">活動地域:</span><%= team.active_area %></div>
               <div class="margin-right1"><span class="font3">活動時間:</span><%= team.active_time %></div>
              <% if user_signed_in? %>
                <div class="right-link"><%= link_to '詳細', post_path(s) %></div>
               <% else %>
              <% end %>
             </div>
            <% end %>
           <% end %>
          <% end %>
         </div>

       <div class="fixed-bottom  bg-light post-footer">
        <nav class="navbar navbar-expand justify-content-around">
         <ul class="nav navbar-nav">
          <li class="nav-item posts-icon"><a href="/posts/new"><i class="far fa-clipboard"></i>掲示板に投稿する</a></li>
          <li class="nav-item posts-icon"><a href="/posts"><i class="fas fa-reply"></i>投稿一覧に戻る</a></li>
         </ul>
        </nav>
       </div>
        <div class="fixed-block"></div>
