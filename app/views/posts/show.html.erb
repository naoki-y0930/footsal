  <h1>投稿詳細</h1>
   <%= attachment_image_tag @post.user, :image, :fill, 250, 250, fallback: "no_image.png"  %>
  <h4>チーム名</h4>
   <%= @post.user.team_name %>
  <h4>キャプテン</h4>
   <%= @post.user.captain_name %>
  <h4>タイトル</h4>
   <%= @post.title %>
  <h4>本文</h4>
   <%= @post.body %>
  <%= link_to '戻る', posts_path %>
   <% if @post.user == current_user  %>
    <p>投稿を削除する</p>
   <% else %>
    <% if @isRoom == true %>
     <p><a href="/rooms/<%= @roomId %>">チャットへ</a></p>
    <% else %>
     <%= form_for(@room) do |f| %>
      <%= fields_for @entry do |e| %>
       <% e.hidden_field :user_id, value: @user.id %>
      <% end %>
     <%= f.submit "お話しする" %>
    <% end %>
   <% end %>
  <% end %>
