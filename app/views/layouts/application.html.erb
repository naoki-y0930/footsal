<!DOCTYPE html>
<html>
  <head>
    <title>Footsal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
   <body>
   <header>
    <nav class="navbar navbar-expand navbar-dark bg-primary">
     <%= link_to "footsal", "#", id: "logo", class: "navbar-brand" %>
     <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto">
      <li class="nav-item"><%= link_to "ホーム", root_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "トークルーム", rooms_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "掲示板", posts_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
     </ul>
      <% elsif admin_signed_in? %>
       <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "管理ホーム", admins_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ユーザー情報", admins_people_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "掲示板へ", posts_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %></li>
       </ul>
     <% else %>
      <ul class="navbar-nav ml-auto">
       <li class="nav-item">
        <%= link_to "会員登録",new_user_registration_path, class: "nav-link" %>
       </li>
       <li class="nav-item">
        <%= link_to "ログイン", user_session_path, class: "nav-link" %>
       </li>
      </ul>
      <% end %>
     </nav>
    </header>
   <%= yield %>
  </body>
 </html>
