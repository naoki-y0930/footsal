    <div class="frame">
     <h2 class="center margin1">会員登録</h2>
      <div class="container">
       <div class="row justify-content-center">
        <div class="col-md-8">
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
         <div class="form-group">
          <h4 class="font4">名前</h4>
           <%= f.text_field :name, class: 'form-control various-width' %>
          </div>
         <div class="form-group">
          <h4 class="font4">キャプテンネーム</h4>
           <%= f.text_field :captain_name, class: 'form-control varuous-width' %>
          </div>
         <div class="form-group">
          <h4 class="font4">チーム名</h4>
           <%= f.text_field :team_name, class: 'form-control various-width' %>
          </div>
         <div class="field form-group">
          <h4 class="font4">電話番号</h4>
           <%= f.text_field :tell, autofocus: true, autocomplete: "tell", class: 'form-control various-width' %>
          </div>
         <div class="field form-group">
          <h4 class="font4">パスワード
           <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
           <% end %><br /></h4>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control various-width' %>
           </div>
          <div class="field form-group">
           <h4 class="font4">パスワード再確認</h4>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control various-width' %>
           </div>
          <div class="actions">
           <%= f.submit "Sign up", class: 'btn btn-primary various-width' %>
          </div>
         <% end %>
        <%= render "users/shared/links" %>
       </div>
      </div>
     </div>
    </div>
